generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Prescription {
  id                 String   @id @default(uuid())
  drugName           String
  rxcui              String?
  sig                String
  daysSupply         Int
  totalQuantity      Int
  calculationResult  Json?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@index([createdAt])
  @@index([drugName])
  @@map("prescriptions")
}
